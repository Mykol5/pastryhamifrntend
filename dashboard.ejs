.image-gallery {
  position: relative;
  margin-bottom: 40px;
}

.slideshow-container {
  position: relative;
  overflow: hidden;
}

.slideshow {
  display: flex;
  width: calc(300px * 5);
  animation: slideshow 15s linear infinite;
}

.slideshow img {
  width: 300px;
  height: 200px;
  margin-right: 20px;
}

.dots-container {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
}

.dot {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  background-color: #bbb;
  margin-right: 10px;
  cursor: pointer;
}

.active {
  background-color: #717171;
}

@keyframes slideshow {
  0% {
    transform: translateX(0);
  }
  20% {
    transform: translateX(0);
  }
  25% {
    transform: translateX(-150px);
  }
  45% {
    transform: translateX(-150px);
  }
  50% {
    transform: translateX(-300px);
  }
  70% {
    transform: translateX(-300px);
  }
  75% {
    transform: translateX(-450px);
  }
  95% {
    transform: translateX(-450px);
  }
  100% {
    transform: translateX(-600px);
  }
}


